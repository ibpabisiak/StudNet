@model List<Studnet.Models.forum_topic_category>
@{
    ViewBag.Title = "Zarządzaj kategoriami";
}

<h2>@ViewBag.Title</h2>
@Html.ActionLink("<- Powrót", "Index", "Forum")
<br /><br />
 
<table style="border-collapse: separate; border-spacing: 50px 0;">
    <tr>
        <th scope="col">Kategoria</th>
    </tr>
@{  foreach (var category in Model)
        {
            <tr>
                <td>@category.forum_topic_category_name</td>
                <td>
                    <form action="/Forum/RemoveCategory" method="post">
                        <input type="hidden" name="categoryToDelete" value="@category.Id"/>
                        <input type="submit" class="btn-link" value="Usuń" />
                    </form>
                </td>
            </tr>
        }
    }
</table>
<br /><br />
<form action="/Forum/AddCategory" method="post">
    @{
        if (ViewBag.Error != null)
        {
            <font color="red"><b>@ViewBag.Error</b></font>
        }
    }
    <div class="form-group">
        <label for="forum_topic_category_name">Nazwa kategorii:</label>
        <input type="text" name="forum_topic_category_name" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Dodaj" />
    </div>
</form>

