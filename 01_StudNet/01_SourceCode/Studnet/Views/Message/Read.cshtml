@model List<Studnet.Models.message>

@{
    ViewBag.Title = "Konwersacja z " + ViewBag.ConversationWith;
}

<h2>@ViewBag.Title</h2>
<br />
<center>
    <div style="width: auto;clear:both;max-width:60%; height:auto;">
    @foreach (var message in Model)
    {
        if (message.users.GetFullName().Equals(ViewBag.ConversationWith))
        {
            <div style="clear:both;">

                <div style="float:left;"><b>@ViewBag.ConversationWith<br />@message.message_date_created.ToString("dd.MM.yyyy hh:mm:ss")</b>&nbsp;</div><div style="width:auto;max-width:40%;word-wrap:break-word;clear:both;float:left; background-color:aqua; border-radius: 10px;border-color:black">
                    &nbsp;@message.message_text&nbsp;
                </div>
                </div>
                <br />
                <br />
                }
                else
                {
                <div style="clear:both;">
                    <div style="float:right;">&nbsp;<b>@message.users.GetFullName()<br />@message.message_date_created.ToString("dd.MM.yyyy hh:mm:ss")</b></div><div style="width:auto;max-width:40%;word-wrap:break-word;clear:both; float:right;background-color:gray;border-radius: 10px;border-color:black">
                        &nbsp;@message.message_text&nbsp;
                    </div>
                </div>
                <br />
                <br />
                }
                }
                <br />

                <div style="clear:both;">
                    <form method="post">
                        @{
                            if (ViewBag.Error != null)
                            {
                                <font color="red"><b>@ViewBag.Error</b></font>
                            }
                        }
                        <input type="hidden" name="message_user_to_id" value="@ViewBag.ConversedWithId" />
                        <div class="form-group">
                            <label for="message_text">Odpowiedź:</label>
                            <textarea name="message_text" cols="40" rows="5"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-default" value="Wyślij" />
                        </div>
                    </form>
                </div>
            </div>
</center>
