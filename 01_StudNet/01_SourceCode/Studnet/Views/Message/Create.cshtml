@{
    ViewBag.Title = "Utwórz wiadomość";
}

<h2>@ViewBag.Title</h2>

<form method="post">
    @{
        if (ViewBag.Error != null)
        {
            <font color="red"><b>@ViewBag.Error</b></font>
        }
    }
    <div class="form-group">
        <label for="message_user_to_id">Odbiorca:</label>
        <select name="message_user_to_id" >
            @if (ViewBag.UserTo == null)
            {
                <option value="0" selected>Wybierz odbiorcę:</option>
            }
            else
            {
                <option value="0">Wybierz odbiorcę:</option>
            }
            @{
                foreach (var user in (List<Studnet.Models.users>)ViewBag.Users)
                {
                    if (ViewBag.UserTo != null && (int)ViewBag.UserTo == user.Id)
                    {
                        <option value="@user.Id" selected>@user.GetFullName()</option>
                    }
                    else
                    {
                        <option value="@user.Id">@user.GetFullName()</option>
                    }
                }
            }
        </select>
    </div>
    <div class="form-group">
        <label for="message_text">Treść wiadomości:</label>
        <textarea style="" name="message_text" cols="80" rows="5">
            @if (ViewBag.PreMessage != null)
            {
                @:*** @ViewBag.PreMessage ***
            }
        </textarea>
        </div>
    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Wyślij wiadomość" />
    </div>
</form>