@model List<Studnet.Models.group>
@{
    ViewBag.Title = "Zarządzanie grupami";
}

<h2>@ViewBag.Title</h2>

@if (ViewBag.Error != null)
{
    <font color="red"><b>@ViewBag.Error</b></font>
}
@Html.ActionLink("Dodaj grupę", "Add", "Group")
<h3>Grupy:</h3>
@foreach(var group in Model)
{
    <h4>@group.group_name</h4>
    @Html.ActionLink("Dodaj użytkownika do grupy", "AddUserToGroup", "Group", new { groupId = group.Id}, null)
    <table>
        <tr>
            <th scope="col">Imię i nazwisko</th>
            <th scope="col" style="padding: 0 15px">Numer albumu</th>
         </tr>
            @foreach (var user in group.users)
            {
                <tr>
                    <td>@user.GetFullName()</td>
                    <td style="padding: 0 15px">@user.user_index.ToString()</td>
                    <td>@Html.ActionLink("Usuń z grupy", "RemoveUser", "Group", new { userId = user.Id, groupId = group.Id }, null)</td>
                </tr>
            }

    </table>
}
